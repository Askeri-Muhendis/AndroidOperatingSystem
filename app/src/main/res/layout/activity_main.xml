<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/battery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batarya"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/battery_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_not_battery"
        app:layout_constraintEnd_toEndOf="@+id/battery_tv"
        app:layout_constraintStart_toStartOf="@+id/battery_tv"
        app:layout_constraintTop_toBottomOf="@+id/battery_tv" />


    <TextView
        android:id="@+id/battery_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Şart olmuyor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery_iv" />


    <TextView
        android:id="@+id/earphones_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kulaklık"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery_status_tv" />

    <ImageView
        android:id="@+id/earphones_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_headset_off"
        app:layout_constraintEnd_toEndOf="@+id/battery_tv"
        app:layout_constraintStart_toStartOf="@+id/battery_tv"
        app:layout_constraintTop_toBottomOf="@+id/earphones_tv" />


    <TextView
        android:id="@+id/earphones_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earphones_iv"
        tools:text="Takılı Değil" />

</androidx.constraintlayout.widget.ConstraintLayout>